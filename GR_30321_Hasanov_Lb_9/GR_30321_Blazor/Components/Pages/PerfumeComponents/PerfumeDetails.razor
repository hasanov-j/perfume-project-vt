@if (Perfume != null)
{
	<div class="card mt-5" style="width: 18rem;">
		<img src="@Perfume.Image" class="card-img-top" alt="...">
		<div class="card-body">
			<h5 class="card-title">@Perfume.Name</h5>
			<p class="card-text">@Perfume.Description</p>
			<h4 class="badge bg-info">@Perfume.Price rubles</h4>
		</div>
	</div>
}
@code {
	[Parameter]
	public Perfume Perfume { get; set; }
	[Parameter]
	public EventCallback<Perfume> PerfumeChanged { get; set; }
}
