    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Perfume</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Perfume.Name" class="control-label"></label>
                <input asp-for="Perfume.Name" class="form-control" />
                <span asp-validation-for="Perfume.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Perfume.Description" class="control-label"></label>
                <input asp-for="Perfume.Description" class="form-control" />
                <span asp-validation-for="Perfume.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Perfume.Price" class="control-label"></label>
                <input asp-for="Perfume.Price" class="form-control" />
